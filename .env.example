# Database Configuration
DATABASE_URL=postgresql+asyncpg://pharma_user:pharma_pass_2024@localhost:5432/pharmaspec

# Security
SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== AI SERVICES CONFIGURATION =====

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# Ollama Configuration
OLLAMA_URL=http://localhost:11434

# ===== MATRIX GENERATION PROVIDER =====
# Choose which AI provider to use for generating traceability matrix entries:
# "gemini" - Use Google Gemini API (more accurate, requires API credits, faster)
# "ollama" - Use local Ollama/Llama (free, but less accurate with 3B model)
MATRIX_GENERATION_PROVIDER=gemini

# ===== GEMINI MODELS =====
# Model for document extraction (Step 1)
GEMINI_MODEL_EXTRACTION=gemini-2.5-flash

# Model for matrix generation (Step 2) - only used if MATRIX_GENERATION_PROVIDER=gemini
# gemini-2.5-flash - Fast and good quality
# gemini-2.5-pro - More accurate but slower and more expensive
GEMINI_MODEL_MATRIX=gemini-2.5-pro

# Extraction timeout in seconds (important for slower models like gemini-2.5-pro)
# gemini-2.5-flash: 60 seconds is usually sufficient
# gemini-2.5-pro: 300 seconds recommended for large documents
GEMINI_EXTRACTION_TIMEOUT=300

# ===== OLLAMA MODELS =====
# Ollama model - only used if MATRIX_GENERATION_PROVIDER=ollama
# llama3.2:3b - Fast but less accurate (not recommended for production)
# llama3.1:8b - Slower but more accurate
OLLAMA_MODEL=llama3.2:3b

# Redis
REDIS_URL=redis://localhost:6379

# Email Configuration (optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password

# Environment
ENVIRONMENT=development
DEBUG=True

# File Upload
MAX_UPLOAD_SIZE=50000000  # 50MB
UPLOAD_DIR=./uploads