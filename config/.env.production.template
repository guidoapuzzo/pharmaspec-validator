# ===== PRODUCTION ENVIRONMENT CONFIGURATION =====
# Copy this file to .env.production and fill in the values
# ⚠️  CRITICAL SECURITY WARNING ⚠️
# NEVER commit .env.production to Git!
# Store this file securely - it contains sensitive credentials

# ===== DATABASE CONFIGURATION =====
POSTGRES_DB=pharmaspec
POSTGRES_USER=pharma_user
# CRITICAL: Use a strong password! Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!  # REQUIRED: Change this!

# ===== REDIS CONFIGURATION =====
# CRITICAL: Use a strong password! Generate with: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!  # REQUIRED: Change this!

# ===== SECURITY KEYS =====
# CRITICAL: These keys MUST be set and MUST be kept secret!
# If these keys leak, all user sessions can be hijacked
# Generate with: openssl rand -hex 32
# ⚠️  DO NOT use the example values below - generate new ones! ⚠️
SECRET_KEY=CHANGE_THIS_SECRET_KEY  # REQUIRED: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY  # REQUIRED: openssl rand -hex 32
JWT_ALGORITHM=HS256
# GxP Compliance: 30 minutes session timeout recommended for pharmaceutical environments
ACCESS_TOKEN_EXPIRE_MINUTES=30  # Changed from 300 (5h) to 30min for GxP compliance

# ===== AI SERVICES CONFIGURATION =====

# Google Gemini API Key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE  # REQUIRED: Get from https://makersuite.google.com/app/apikey

# Ollama Configuration (if using local Ollama)
OLLAMA_URL=http://host.docker.internal:11434  # Change if Ollama runs elsewhere

# ===== MATRIX GENERATION PROVIDER =====
# Choose: "gemini" or "ollama"
MATRIX_GENERATION_PROVIDER=gemini

# ===== GEMINI MODELS =====
GEMINI_MODEL_EXTRACTION=gemini-2.5-flash
GEMINI_MODEL_MATRIX=gemini-2.5-pro
GEMINI_EXTRACTION_TIMEOUT=300

# ===== OLLAMA MODELS =====
OLLAMA_MODEL=llama3.2:3b

# ===== EMAIL CONFIGURATION (Optional) =====
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-email-password

# ===== APPLICATION SETTINGS =====
ENVIRONMENT=production
# CRITICAL SECURITY: DEBUG must be False in production to prevent information disclosure
DEBUG=False

# ===== SECURITY CONFIGURATION =====

# CORS Origins - Comma-separated list of allowed origins (NO WILDCARDS!)
# Example: https://pharmaspec.company.com,https://pharmaspec-staging.company.com
# ⚠️  Do NOT use wildcards like *.company.com - specify exact domains!
BACKEND_CORS_ORIGINS=https://pharmaspec.company.com

# Trusted Hosts - Comma-separated list of allowed hostnames (NO WILDCARDS!)
# Example: pharmaspec.company.com,10.0.0.5
# ⚠️  Do NOT use wildcards like *.company.com - specify exact hostnames!
TRUSTED_HOSTS=pharmaspec.company.com,localhost,127.0.0.1

# ===== FILE UPLOAD =====
MAX_UPLOAD_SIZE=50000000  # 50MB
UPLOAD_DIR=./uploads

# ===== GXP COMPLIANCE =====
DATA_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
ELECTRONIC_SIGNATURE_REQUIRED=True

# ===== DEFAULT USERS (Optional - for automatic seeding) =====
DEFAULT_ADMIN_EMAIL=admin@company.com
# CRITICAL SECURITY: Use strong passwords! Minimum requirements:
# - At least 12 characters
# - Mix of uppercase, lowercase, numbers, and special characters
# - NOT based on dictionary words
# Example strong password: Xk9#mP2$vL8@qR5!nT7
# ⚠️  Users MUST change these passwords immediately after first login! ⚠️
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD  # REQUIRED: Use strong password!
DEFAULT_ENGINEER_EMAIL=engineer@company.com
DEFAULT_ENGINEER_PASSWORD=CHANGE_THIS_ENGINEER_PASSWORD  # REQUIRED: Use strong password!
